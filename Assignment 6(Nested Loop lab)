#include <stdio.h>
#include <stdlib.h>

int main()
{


    int i,j,n;

    printf("How many lines?: ");
        scanf("%d",&n);

    for(i=0;i<n;i++) {
        //printf ("%3d",i);
        for(j=n; j>i ; j--) printf(" ");
        for(j=0;j<=i;j++) printf("**");
        printf("\n");
    }
    for(i=n;i>0;i--) {
        //printf ("%3d",i);
         for(j=n; j>i ; j--) printf(" ");
        for(j=0;j<=i;j++) printf("**");
        printf("\n");
    }
    return 0;
}
